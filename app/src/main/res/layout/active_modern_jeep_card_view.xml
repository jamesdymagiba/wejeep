<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/backgroundColor"
    app:contentPadding="5dp"
    app:cardCornerRadius="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/unit_no"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/londrina_solid_regular"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvUnitNumber"
                    android:hint="Unit No. Here"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/londrina_solid_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/vehicle_model"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/londrina_solid_regular"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvVehicleModel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/londrina_solid_regular"
                    android:hint="Vehicle Model Here"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/driver"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/londrina_solid_regular"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:hint="Driver Name Here"
                    android:id="@+id/tvDriverName"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/londrina_solid_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/pao"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/londrina_solid_regular"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:hint="Pao Name Here"
                    android:id="@+id/tvPaoName"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/londrina_solid_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/plate_no"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/londrina_solid_regular"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:hint="Plate No. Here"
                    android:id="@+id/tvPlateNumber"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/londrina_solid_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
